<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white sticky-top">
    <a class="navbar-brand border-right pr-3" href="/"><i class="fas fa-home mr-2"></i>Alquileres del Valle
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active mx-3">
                <a class="nav-link" href="/">Inicio</a>
            </li>
            <% if( req.session.user ) { %>
                <li class="nav-item active mx-3">
                    <a class="nav-link" href="#">Estad√≠as</a>
                </li>
                <li class="nav-item active dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown"
                       data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false" role="button">Clientes</a>
                    <div class="dropdown-menu dropdown" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/customer">Ver clientes</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/newCustomer">Agregar cliente</a>
                    </div>
                </li>
            <% } %>

        </ul>

        <ul class="navbar-nav mr-2 ml-3">
            <% if( !req.session.user ) { %>
                <li class="nav-item active">
                    <a class="nav-link" href="/login">Login</a>
                </li>
            <% } else { %>
                <li class="nav-item active dropdown">
                    <a class="nav-link dropdown-toggle text-capitalize pt-2" id="navbarDropdown"
                       data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false" role="button"> <%- req.session.user.username %> </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/newAlojamiento">Nuevo Alojamiento</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</nav>
